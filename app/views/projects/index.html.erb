<p id="notice"><%= notice %></p>

<div class="row">

  <div class="col-lg-3">
    <h1 class="my-4">Projects</h1>
    <div class="list-group">
      <%= link_to 'New Project', new_project_path, class: 'list-group-item' %>
    </div>
  </div>
  <!-- /.col-lg-3 -->

  <div class="col-lg-9">

    <div class="row">

      <% @projects.each do |project| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <% if project.images.first %>
            <%= link_to image_tag(project.images.first, class: 'card-img-top'), project %>
          <% end %>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to project.name, project %>
            </h4>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.col-lg-9 -->

</div>
<!-- /.row -->

