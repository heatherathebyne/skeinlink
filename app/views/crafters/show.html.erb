<h1>
  <%= @crafter.name %>
  <%= link_to icon('far', 'edit'), edit_crafter_path(@crafter) if user_signed_in? && @crafter == current_user %>
</h1>

<h3>Latest Projects</h3>
<div class='row'>
<% @latest_projects.each do |project| %>
      <div class="col-lg-4 col-md-4 mb-4">
        <div class="card h-100">
          <% if project.thumb_images.last %>
            <div class='square-container'>
              <%= image_tag(project.thumb_images.last, class: 'card-img-top') %>
            </div>
          <% end %>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to project.name, project, class: 'stretched-link' %>
            </h4>
          </div>
        </div>
      </div>
<% end %>
</div>

<h4>About Me</h4>
<p><%= @crafter.about_me %></p>
