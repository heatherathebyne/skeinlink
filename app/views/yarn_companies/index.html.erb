<div class='row'>

  <div class='col-lg-3'>
    <h1 class='my-4'>Yarn Companies</h1>
    <div class='list-group'>
      <%= link_to 'Add Yarn Company', new_yarn_company_path, class: 'list-group-item' %>
    </div>

    <div class='my-4'>
      <%= search_form_for @q do |f| %>
        <div class='form-group'>
          <%= f.label :name_cont %>
          <%= f.search_field :name_cont, class: 'form-control' %>
        </div>
        <%= f.submit 'Search', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <div class='col-lg-9'>
    <% @yarn_companies.each do |company| %>
      <li><%= link_to company.name, yarn_company_path(company) %></li>
    <% end %>
  </div>

  <div class='row'><div class='col'><%= page_entries_info(@yarn_companies, entry_name: 'items') %></div></div>
  <div class='row'><div class='col'><%= paginate @yarn_companies %></div></div>
</div>

