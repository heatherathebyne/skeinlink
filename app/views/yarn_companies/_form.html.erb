<% local_form = local_form.nil? ? true : local_form %>
<%= form_with(model: yarn_company, local: local_form, id: 'yarn_company_form') do |f| %>
  <% if yarn_company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(yarn_company.errors.count, "error") %> prohibited this yarn company from being saved:</h2>

      <ul>
        <% yarn_company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :name %> <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :website %> <%= f.text_field :website, class: 'form-control' %>
  </div>

  <% if policy(yarn_company).edit_referral_links? %>
    <div class='form-group'>
      <%= f.label :referral_link %> <%= f.text_field :referral_link, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :referral_partner %> <%= f.text_field :referral_partner, class: 'form-control' %>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :description %> <%= f.text_area :description, class: 'form-control' %>
  </div>

  <%= f.submit 'Add Yarn Company', class: 'btn btn-primary' %>
<% end %>
